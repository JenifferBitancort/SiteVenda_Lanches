<br />
<h4><strong>Gerenciar Imagens</strong></h4>
<br />
<table border="0" width="90%">
    <tr>
        <td>

            <form method="post"  enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
                <div  class="form-group" style="height:430px">
                    <img src="~/Imagens/upload.jpg" width="200" height="200" />
                    <hr />
                    <div class="form-group" style="margin-bottom:20px">
                        <div class="col-md-10">
                            <p><b>Selecione um ou mais arquivos para enviar :</b></p>
                            <p>(Arquivos com o mesmo nome serão sobrescritos)</p>
                            <input type="file" name="files" multiple class="button btn-outline-primary" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Enviar Arquivo(s)" class="button btn-outline-primary" />
                        </div>
                    </div>
                    </div>
            </form>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">
                <div  class="form-group" style="height:430px">
                <img src="~/Imagens/Visualizar.jpeg" width="200" height="200" />
                <hr />
                <div class="form-group">
                    @* style="margin-bottom:102px"*@
                    <div class="col-md-10">
                        <p><strong>Visualizar Imagens na pasta do servidor :</strong></p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar Arquivos no servidor" class="button btn-outline-warning" />
                    </div>
                </div>
                </div>
            </form>
        </td>
    </tr>
</table>
<div class="container">
    @if (ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }
</div>
